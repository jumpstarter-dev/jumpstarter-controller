{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$defs": {
    "port": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "ClusterIP": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "ClusterIP"
        }
      }
    },
    "NodePort": {
      "type": "object",
      "required": [
        "type",
        "nodePort"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "NodePort"
        },
        "nodePort": {
          "$ref": "#/$defs/port"
        }
      }
    },
    "service": {
      "oneOf": [
        {
          "$ref": "#/$defs/ClusterIP"
        },
        {
          "$ref": "#/$defs/NodePort"
        }
      ]
    },
    "ingress": {
      "enabled": {
        "type": "boolean"
      },
      "class": {
        "type": "string"
      }
    },
    "route": {
      "enabled": {
        "type": "boolean"
      }
    },
    "router": {
      "type": "object",
      "required": [
        "hostname",
        "endpoint",
        "service"
      ],
      "properties": {
        "hostname": {
          "type": "string"
        },
        "endpoint": {
          "type": "string"
        },
        "ingress": {
          "$ref": "#/$defs/ingress"
        },
        "route": {
          "$ref": "#/$defs/route"
        },
        "service": {
          "$ref": "#/$defs/service"
        }
      }
    }
  },
  "required": [
    "image"
  ],
  "properties": {
    "namespace": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "tag": {
      "type": "string"
    },
    "grpc": {
      "required": [
        "hostname",
        "endpoint"
      ],
      "properties": {
        "hostname": {
          "type": "string"
        },
        "endpoint": {
          "type": "string"
        },
        "ingress": {
          "$ref": "#/$defs/ingress"
        },
        "route": {
          "$ref": "#/$defs/route"
        },
        "service": {
          "$ref": "#/$defs/service"
        },
        "routers": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/router"
          }
        }
      }
    }
  }
}
