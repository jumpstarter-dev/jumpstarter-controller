{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$defs": {
    "port": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "labels": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "string",
          "null"
        ]
      }
    },
    "ClusterIP": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "ClusterIP"
        }
      }
    },
    "NodePort": {
      "type": "object",
      "required": [
        "type",
        "nodePort"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "NodePort"
        },
        "nodePort": {
          "$ref": "#/$defs/port"
        }
      }
    },
    "service": {
      "anyOf": [
        {
          "$ref": "#/$defs/ClusterIP"
        },
        {
          "$ref": "#/$defs/NodePort"
        }
      ]
    },
    "ingress": {
      "enabled": {
        "type": "boolean"
      },
      "class": {
        "type": "string"
      }
    },
    "route": {
      "enabled": {
        "type": "boolean"
      }
    },
    "router": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hostname": {
          "type": "string"
        },
        "endpoint": {
          "type": "string"
        },
        "ingress": {
          "$ref": "#/$defs/ingress"
        },
        "route": {
          "$ref": "#/$defs/route"
        },
        "service": {
          "$ref": "#/$defs/service"
        },
        "labels": {
          "$ref": "#/$defs/labels"
        }
      }
    }
  },
  "required": [
    "image",
    "imagePullPolicy"
  ],
  "additionalProperties": false,
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "config": {
      "type": "object"
    },
    "namespace": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "tag": {
      "type": "string"
    },
    "imagePullPolicy": {
      "type": "string"
    },
    "global": {
      "additionalProperties": true,
      "properties": {
        "baseDomain": {
          "type": "string"
        },
        "metrics": {
          "types": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "grpc": {
      "additionalProperties": false,
      "properties": {
        "hostname": {
          "type": "string"
        },
        "endpoint": {
          "type": "string"
        },
        "ingress": {
          "$ref": "#/$defs/ingress"
        },
        "route": {
          "$ref": "#/$defs/route"
        },
        "service": {
          "$ref": "#/$defs/service"
        },
        "tls": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "secret": {
              "type": "string"
            },
            "controllerCertSecret": {
              "type": "string"
            },
            "routerCertSecret": {
              "type": "string"
            },
            "port": {
              "$ref": "#/$defs/port"
            },
            "mode": {
              "type": "string",
              "enum": [
                "passthrough",
                "reencrypt"
              ]
            }
          }
        },
        "routers": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/router"
          }
        }
      }
    }
  }
}
